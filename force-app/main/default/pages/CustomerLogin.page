            font-weight: 400;
            font-style: normal;
        }
        @font-face {
            font-family: 'Brandon Text';
            src: url("{!URLFOR($Resource.loginPage, 'fonts/brandontext/BrandonText-RegularItalic.ttf')}");
            font-weight: 400;
            font-style: italic;
        }
        @font-face {
            font-family: 'Brandon Text';
